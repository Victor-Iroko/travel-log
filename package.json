{
  "name": "travel-log",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "dev:full": "concurrently -n \"DB,NUXT,STUDIO\" -c \"blue,green,magenta\" \"bun run db:start\" \"bun run dev\" \"bun run db:studio\"",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "vitest",
    "test:unit": "vitest --project unit",
    "test:nuxt": "vitest --project nuxt",
    "test:watch": "vitest --watch",
    "test:run": "vitest related",
    "prepare": "husky",
    "db:start": "docker compose up -d db",
    "db:stop": "docker compose stop db",
    "db:restart": "npm run db:stop && npm run db:start",
    "db:down": "docker compose down --remove-orphans",
    "db:destroy": "docker compose down -v --remove-orphans",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:pull": "drizzle-kit pull",
    "db:check": "drizzle-kit check",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run server/database/seed.ts"
  },
  "dependencies": {
    "@indoorequal/vue-maplibre-gl": "^8.4.2",
    "@nuxt/eslint": "1.10.0",
    "@nuxt/image": "1.10.0",
    "@nuxt/test-utils": "^3.20.1",
    "@nuxt/ui": "4.1.0",
    "@nuxtjs/seo": "3.2.2",
    "@pinia/nuxt": "^0.11.2",
    "@vueuse/components": "^14.0.0",
    "@vueuse/motion": "^3.0.3",
    "@vueuse/nuxt": "14.0.0",
    "better-auth": "^1.3.34",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "eslint": "^9.0.0",
    "ioredis": "^5.8.2",
    "maplibre-gl": "^5.11.0",
    "nanoid": "^5.1.6",
    "nuxt": "^4.2.0",
    "nuxt-csurf": "1.6.5",
    "nuxt-maplibre": "1.1.1",
    "pg": "^8.16.3",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.5.0",
    "slug": "^11.0.1",
    "typescript": "^5.6.3",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@iconify-json/iconamoon": "^1.2.2",
    "@types/pg": "^8.15.6",
    "@types/slug": "^5.0.9",
    "@vue/test-utils": "^2.4.6",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.6",
    "drizzle-seed": "^0.3.1",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "playwright-core": "^1.56.1",
    "vitest": "^4.0.5"
  },
  "lint-staged": {
    "*.{ts,vue,js,json}": [
      "bun lint",
      "bun run test:run"
    ]
  }
}
